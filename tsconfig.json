{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2024",
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "#utilities/*": ["src/utilities/*"],
      "#resources/*": ["src/resources/*"],
      "#errors/*": ["src/errors/*"]
    },
    "sourceMap": true,
    "composite": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}