{
  "name": "@slashstepgroup/slashstep-server",
  "version": "0.1.0",
  "description": "JavaScript software development kit for developing applications for Slashstep.",
  "type": "module",
  "main": "./dist/app.js",
  "scripts": {
    "build": "tsc -b --clean && tsc -b",
    "dev": "tsc && copyfiles -u 1 src/**/*.sql dist && node --env-file=.env --trace-deprecation ./dist/app.js",
    "start": "node ./dist/app.js",
    "setup": "node ./dist/app.js --setup",
    "test": "node --import tsx --test"
  },
  "imports": {
    "#utilities/*": "./dist/utilities/*",
    "#resources/*": "./dist/resources/*",
    "#errors/*": "./dist/errors/*",
    "#routes/*": "./dist/routes/*"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "read": "^4.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "copyfiles": "^2.4.1",
    "pg-mem": "^3.0.5",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0"
  }
}
