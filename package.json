{
  "name": "@waltzgroup/waltz-server",
  "version": "0.1.0",
  "description": "JavaScript software development kit for developing applications for Waltz.",
  "type": "module",
  "main": "./dist/app.js",
  "scripts": {
    "build": "tsc -b --clean && tsc -b",
    "dev": "tsc && node --env-file=.env --trace-deprecation ./dist/app.js",
    "start": "node ./dist/app.js",
    "setup": "node ./dist/app.js --setup"
  },
  "imports": {
    "#utilities/*": "./dist/utilities/*",
    "#resources/*": "./dist/resources/*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/pg": "^8.15.5",
    "typescript": "^5.9.2"
  }
}
