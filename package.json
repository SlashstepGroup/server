{
  "name": "@slashstepgroup/slashstep-server",
  "version": "0.1.0",
  "description": "JavaScript software development kit for developing applications for Slashstep.",
  "type": "module",
  "main": "./dist/app.js",
  "scripts": {
    "build": "tsc -b --clean && tsc -b --project tsconfig.build.json",
    "dev": "tsc --project tsconfig.build.json && copyfiles -u 1 src/**/*.sql dist && node --env-file=.env --trace-deprecation ./dist/app.js",
    "start": "node ./dist/app.js",
    "setup": "node ./dist/app.js --setup",
    "test": "cross-os test"
  },
  "cross-os": {
    "test": {
      "win32": "powershell cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" node --import tsx --test --test-timeout=120000",
      "linux": "cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" node --import tsx --test --test-timeout=120000"
    }
  },
  "imports": {
    "#utilities/*": "./dist/utilities/*",
    "#resources/*": "./dist/resources/*",
    "#errors/*": "./dist/errors/*",
    "#routes/*": "./dist/routes/*"
  },
  "dependencies": {
    "@litehex/node-vault": "^1.1.0",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "read": "^4.1.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "cross-os": "^1.5.0",
    "pg-mem": "^3.0.5",
    "testcontainers": "^11.7.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0"
  }
}
